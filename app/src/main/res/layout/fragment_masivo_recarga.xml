<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Listado de recargas"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="Cantidad Total: 0"
        android:id="@+id/lblRecarga"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lstRecargas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"></ListView>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btnMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_red"
        android:text="Regresar al menu principal"
        android:textColor="#ffff" />
</LinearLayout>